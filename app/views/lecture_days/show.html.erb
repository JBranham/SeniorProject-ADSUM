<%- model_class = LectureDay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:monday) %>:</strong></dt>
  <dd><%= @lecture_day.monday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tuesday) %>:</strong></dt>
  <dd><%= @lecture_day.tuesday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:wednesday) %>:</strong></dt>
  <dd><%= @lecture_day.wednesday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:thursday) %>:</strong></dt>
  <dd><%= @lecture_day.thursday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:friday) %>:</strong></dt>
  <dd><%= @lecture_day.friday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:saturday) %>:</strong></dt>
  <dd><%= @lecture_day.saturday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sunday) %>:</strong></dt>
  <dd><%= @lecture_day.sunday %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @lecture_day.course_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lecture_days_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lecture_day_path(@lecture_day), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              lecture_day_path(@lecture_day),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
