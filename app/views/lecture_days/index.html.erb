<%- model_class = LectureDay -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:monday) %></th>
      <th><%= model_class.human_attribute_name(:tuesday) %></th>
      <th><%= model_class.human_attribute_name(:wednesday) %></th>
      <th><%= model_class.human_attribute_name(:thursday) %></th>
      <th><%= model_class.human_attribute_name(:friday) %></th>
      <th><%= model_class.human_attribute_name(:saturday) %></th>
      <th><%= model_class.human_attribute_name(:sunday) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @lecture_days.each do |lecture_day| %>
      <tr>
        <td><%= link_to lecture_day.id, lecture_day_path(lecture_day) %></td>
        <td><%= lecture_day.monday %></td>
        <td><%= lecture_day.tuesday %></td>
        <td><%= lecture_day.wednesday %></td>
        <td><%= lecture_day.thursday %></td>
        <td><%= lecture_day.friday %></td>
        <td><%= lecture_day.saturday %></td>
        <td><%= lecture_day.sunday %></td>
        <td><%= lecture_day.course_id %></td>
        <td><%=l lecture_day.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_lecture_day_path(lecture_day), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      lecture_day_path(lecture_day),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_lecture_day_path,
            :class => 'btn btn-primary' %>
