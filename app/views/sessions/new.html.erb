
<h1 align="center">ADSUM Login</h1>

<div>
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag do %>
<fieldset>
<legend>Please Log In</legend>
<div>
<table width="135%">
<td><%= label_tag :name, 'Name:' %></td>
<td float="right"><%= text_field_tag :name, params[:name] %></td>
<tr></tr>
</div>
<div>
<td><%= label_tag :password, 'Password:' %></td>
<td><%= password_field_tag :password, params[:password] %></td>
</table>
</div>
<div>
<table width="160%">
<tr></tr>
<tr></tr>
<td>  <div class="form-actions">
    <%= submit_tag "Log In", :class => 'btn btn-primary' %>
    <%= link_to t('Create Account'),
                new_user_path, :class => 'btn' %>
</td></div>
</table>
</div>
</fieldset>
<% end %>
</div>