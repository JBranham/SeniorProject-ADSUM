<%- model_class = PassDPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:descr) %></th>
      <th><%= model_class.human_attribute_name(:designated_point_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @pass_d_points.each do |pass_d_point| %>
      <tr>
        <td><%= link_to pass_d_point.id, pass_d_point_path(pass_d_point) %></td>
        <td><%= pass_d_point.course_id %></td>
        <td><%= pass_d_point.student_id %></td>
        <td><%= pass_d_point.descr %></td>
        <td><%= pass_d_point.designated_point_id %></td>
        <td><%=l pass_d_point.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_pass_d_point_path(pass_d_point), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      pass_d_point_path(pass_d_point),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_pass_d_point_path,
            :class => 'btn btn-primary' %>
