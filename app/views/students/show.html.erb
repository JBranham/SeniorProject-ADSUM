<%- model_class = Student -%>
<div class="page-header">
  <h1>Info for <%= @student.fname %> <%= @student.lname %></h1>
</div>


<p id="notice"><%= notice %></p>
<div class = "field" align = "center">
<p>
	<b>Preferred Name:</b>
	<%= @student.preferred_name %>
<p>
  <b>First Name:</b>
  <%= @student.fname %>
</p>

<p>
  <b>Last Name:</b>
  <%= @student.lname %>
</p>

<p>
  <b>Student Number:</b>
  <%= @student.student_no %>
</p>

<p>
	<b>Total Points:</b>
	<%= @student.points %>
</p>
---------------------------------------------
</div>

<div class="field" align="center">

	<h3>List of Points</h3>
	<table>
	<% @pass_d_points.each do |points| %>
	<td><%= points.descr %></td><td></td><td></td>
	<td><%= points.created_at.to_date %></td>
	<tr><p></p></tr>
	<tr></tr>
	<% end %>
	</table>
</div>

<%= will_paginate @pass_d_points %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              @course, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_student_path(@student), :class => 'btn' %>
</div>
