<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Date) %>:</strong></dt>
  <dd><%= @attendance.Date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:present) %>:</strong></dt>
  <dd><%= @attendance.present %></dd>
  <dt><strong><%= model_class.human_attribute_name(:absent) %>:</strong></dt>
  <dd><%= @attendance.absent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tardy) %>:</strong></dt>
  <dd><%= @attendance.tardy %></dd>
  <dt><strong><%= model_class.human_attribute_name(:excused) %>:</strong></dt>
  <dd><%= @attendance.excused %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @attendance.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @attendance.course_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              attendances_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_attendance_path(@attendance), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              attendance_path(@attendance),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
