<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:Date) %></th>
      <th><%= model_class.human_attribute_name(:present) %></th>
      <th><%= model_class.human_attribute_name(:absent) %></th>
      <th><%= model_class.human_attribute_name(:tardy) %></th>
      <th><%= model_class.human_attribute_name(:excused) %></th>
      <th><%= model_class.human_attribute_name(:student_id) %></th>
      <th><%= model_class.human_attribute_name(:course_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @attendances.each do |attendance| %>
      <tr>
        <td><%= link_to attendance.id, attendance_path(attendance) %></td>
        <td><%= attendance.Date %></td>
        <td><%= attendance.present %></td>
        <td><%= attendance.absent %></td>
        <td><%= attendance.tardy %></td>
        <td><%= attendance.excused %></td>
        <td><%= attendance.student_id %></td>
        <td><%= attendance.course_id %></td>
        <td><%=l attendance.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_attendance_path(attendance), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      attendance_path(attendance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_attendance_path,
            :class => 'btn btn-primary' %>
